<p id="notice"><%= notice %></p>

<h1>Products</h1>
<div class="product-buttons">
  <%=link_to "Cheapest product", products_cheapest_path, :class => 'btn btn-outline-info' %>
  <%=link_to "Expensivest product", products_expensivest_path, :class => 'btn btn-outline-info' %>
  <%=link_to "Median product", products_median_path, :class => 'btn btn-outline-info' %>
  <%=link_to "Products count", products_count_path, :class => 'btn btn-outline-info' %>
</div>
<table class="table table-striped ">
  <thead>
    <tr>
      <th><%= sortable "Name" %></th>
      <th><%=sortable "Price" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>

      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Show', product, :class => 'btn btn-outline-success' %></td>
        <td><%= link_to 'Edit', edit_product_path(product), :class => 'btn btn-outline-info' %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' },:class => 'btn btn-outline-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="index-buttons">
<%= link_to 'New Product', new_product_path, :class => 'btn btn-outline-success'%>
<%=link_to 'Destroy All', delete_all_products_path, method: :delete, data: { confirm: 'Are you sure?' },:class => 'btn btn-outline-danger' %>
</div>
<%=paginate @products %>

