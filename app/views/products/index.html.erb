<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table class="table table-striped ">
  <thead>
    <tr>
      <th><%= sortable "Name" %></th>
      <th><%=sortable "Price" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>

      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><button type = 'button' class="btn btn-outline-info"><%= link_to 'Show', product %></td>
        <td><button type="button" class="btn btn-outline-success"><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><button type="button" class="btn btn-outline-danger"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<button type="button" class="btn btn-outline-danger"><%=link_to 'Destroy All', delete_all_products_path, method: :delete, data: { confirm: 'Are you sure?' } %></button>
<br>
<%=paginate @products %>
<br>
<button ctype="button" class="btn btn-outline-success"><%= link_to 'New Product', new_product_path %></button>
